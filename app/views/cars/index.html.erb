<div class="row">
	<div class="col-md-1"></div>
	<div class="col-md-6">
		<div class="nav">
		<div class="navbar-nav navbar-left" style="margin-bottom: 10px;">
			<input type="text" class="form-control" placeholder="Search ..." aria-describedby="sizing-addon1">
		</div>
	  <div class="navbar-nav navbar-right" style="margin-right: 0px;">
	  	<%= button_to "បង្កើតឡានថ្មី", new_car_path, :class => "btn btn-default", :method => "get" %>
	  </div>
  	</div>

	  <div class="panel panel-default">
			<table class="table table-striped table-hover">
				<th style="width: 40%"> ផ្លាកលេខ </th>
				<th style="width: 40%"> ប្រភេទឡាន </th>
				<th style="width: 20%"> </th>

				<% @cars.each do |car| %>
					<tr>
						<td> <%= car.plate_number %> </td>
						<td> <%= car.name %> </td>
						<td>
							<div>
								<span style = "margin-right: 10px;">
									<%= link_to "", edit_car_path(car), class: "glyphicon glyphicon-pencil" %>
								</span>
								<span style = "margin-right: 10px;">
									<%= link_to "", car_path(car), method: :delete, data: {confirm: "Are you sure want to delete this car?"}, class: "glyphicon glyphicon-trash" %>
								</span>
								<span style = "margin-right: 5px;">
									<%= link_to "", cars_path, class: "glyphicon glyphicon-zoom-in" %>
								</span>
							</div>
						</td>
					</tr>
				<% end %>	
			</table>
		</div>
		<div style="margin-top: -25px;">
			<%= will_paginate @cars, renderer: BootstrapPagination::Rails %>
		</div>
	</div>
</div>