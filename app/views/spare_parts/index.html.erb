<div class="row">
	<div class="col-md-1"></div>
	<div class="col-md-8">
		<div class="nav">
		<%= form_tag spare_parts_path, :method => 'get', :class => "form-inline" do %>
			<div class="navbar-nav navbar-left" style="margin-bottom: 10px;">
				<%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search ..." %>
				<%= submit_tag "Search", :class => "btn btn-default" %>
			</div>
		<% end %>
	  <div class="navbar-nav navbar-right" style="margin-right: 0px;">
	  	<%= button_to "បង្កើតថ្មី", new_spare_part_path, :class => "btn btn-default", :method => "get" %>
	  </div>
  	</div>
  	<% if !@spare_parts.empty? %>
		  <div class="panel panel-default">
				<table class="table table-striped table-hover">
					<th style="width: 20%"> លេខកូដ </th>
					<th style="width: 15%"> ឈ្មោះ </th>
					<td style="width: 10%"> ចំនួន </th>
					<th style="width: 20%"> តំលៃដើម </th>
					<th style="width: 20%"> តំលៃលក់ </th>
					<th style="width: 15%"> </th>

					<% @spare_parts.each do |spare_part| %>
						<tr>
							<td> <%= spare_part.code %> </td>
							<td> <%= spare_part.name %> </td>
							<td> <%= spare_part.amount_in_stock %> </td>
							<td> <%= spare_part.based_price %> </td>
							<td> <%= spare_part.selling_price %> </td>
							<td>
								<div>
									<span style = "margin-right: 10px;">
										<%= link_to "", edit_spare_part_path(spare_part), class: "glyphicon glyphicon-pencil" %>
									</span>
									<span style = "margin-right: 10px;">
										<%= link_to "", spare_part_path(spare_part), method: :delete, data: {confirm: "Are you sure want to delete this item?"}, class: "glyphicon glyphicon-trash" %>
									</span>
									<span style = "margin-right: 5px;">
										<%= link_to "", spare_part_path(spare_part), class: "glyphicon glyphicon-zoom-in" %>
									</span>
								</div>
							</td>
						</tr>
					<% end %>	
				</table>
			</div>
		<% end %>
		<div style="margin-top: -25px;">
			<% if !@spare_parts.empty? %>
			<%= will_paginate @spare_parts, renderer: BootstrapPagination::Rails %>
			<% end %>
		</div>
	</div>
</div>